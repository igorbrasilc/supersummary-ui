{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "supersummary-tokens": ["../tokens/src"]
    }
  },
  "include": ["src"],
  "references": [
    { "path": "../tokens" }
  ]
} 